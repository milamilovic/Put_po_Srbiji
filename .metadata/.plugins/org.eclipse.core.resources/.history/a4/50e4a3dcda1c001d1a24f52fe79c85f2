package main;

import java.net.URL;

import javax.sound.sampled.AudioInputStream;
import javax.sound.sampled.AudioSystem;
import javax.sound.sampled.Clip;

public class Sound {

	Clip clip;
	URL soundURL[] = new URL[30];
	
	public Sound() {
		soundURL[0] = getClass().getResource("/collect_gift.wav");
		soundURL[1] = getClass().getResource("/collect_puzzle.wav");
		soundURL[2] = getClass().getResource("/soundtrack1.wav");
		soundURL[3] = getClass().getResource("/walking.wav");
	}
	
	public void setFile(int i) {
		
		try{
			
			AudioInputStream ais = AudioSystem.getAudioInputStream(soundURL[i]);
			clip = AudioSystem.getClip();
			clip.open(ais);
			
		} catch(Exception e) {
			e.printStackTrace();
		}
		
	}
	
	public void play() {
		
	}
	
	public void loop() {
		
	}
	
	public void stop() {
		
	}
	
}
